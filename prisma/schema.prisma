generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model category {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String
  items       item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model item {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  price       Float
  description String
  categoryId  String
  images      String[]
  category    category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
